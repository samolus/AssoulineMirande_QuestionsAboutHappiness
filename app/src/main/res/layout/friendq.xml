<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:id="@+id/q1F"
        android:textSize="24sp"
        android:fontFamily="serif"
        android:textAlignment="center"
        android:textStyle="normal|bold" />

    <CheckBox
        android:text="A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/checkBoxQ2A"
        android:layout_below="@+id/q2F"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp" />

    <CheckBox
        android:text="C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxQ1C"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/q1F"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="42dp"
        android:layout_marginEnd="42dp" />

    <CheckBox
        android:text="A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxQ1A"
        android:layout_alignBaseline="@+id/checkBoxQ1C"
        android:layout_alignBottom="@+id/checkBoxQ1C"
        android:layout_alignLeft="@+id/checkBoxQ2A"
        android:layout_alignStart="@+id/checkBoxQ2A" />

    <Button
        android:onClick="onClick"
        android:text="Confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:id="@+id/confirmFriend"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:text="A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox3A"
        android:layout_below="@+id/q3F"
        android:layout_alignLeft="@+id/checkBoxQ2A"
        android:layout_alignStart="@+id/checkBoxQ2A" />

    <CheckBox
        android:text="C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox3C"
        android:layout_below="@+id/checkBox3B"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:text="B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox3B"
        android:layout_below="@+id/q3F"
        android:layout_alignRight="@+id/checkBoxQ1C"
        android:layout_alignEnd="@+id/checkBoxQ1C" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/q2F"
        android:textSize="24sp"
        android:fontFamily="serif"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:layout_below="@+id/checkBoxQ1B"
        android:layout_alignLeft="@+id/q1F"
        android:layout_alignStart="@+id/q1F" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/q3F"
        android:textSize="24sp"
        android:fontFamily="serif"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:layout_below="@+id/checkBox2C"
        android:layout_alignLeft="@+id/q2F"
        android:layout_alignStart="@+id/q2F"
        android:layout_marginTop="17dp" />

    <CheckBox
        android:text="C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox2C"
        android:layout_below="@+id/checkBoxQ2A"
        android:layout_alignLeft="@+id/checkBox3C"
        android:layout_alignStart="@+id/checkBox3C" />

    <CheckBox
        android:text="B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBoxQ1B"
        android:layout_below="@+id/checkBoxQ1C"
        android:layout_alignLeft="@+id/checkBox2C"
        android:layout_alignStart="@+id/checkBox2C" />

    <CheckBox
        android:text="B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox2B"
        android:layout_alignBaseline="@+id/checkBoxQ2A"
        android:layout_alignBottom="@+id/checkBoxQ2A"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp" />
</RelativeLayout>