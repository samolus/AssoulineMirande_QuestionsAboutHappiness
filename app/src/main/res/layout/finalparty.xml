<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="Let's the party start !"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textParty"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:fontFamily="serif"
        android:typeface="sans"
        android:textSize="36sp"
        android:textStyle="normal|bold|italic"
        android:layout_marginTop="26dp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:srcCompat="@drawable/party"
        android:src="@drawable/party"
        android:id="@+id/party"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/textParty"
        android:layout_centerHorizontal="true" />

    <Button
        android:onClick="onClick"
        android:text="Exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/exitParty"
        android:layout_below="@+id/party"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="32dp" />

    <Button
        android:text="TommorowLand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/exitParty"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="54dp"
        android:layout_marginStart="54dp"
        android:id="@+id/buttonZ" />

</RelativeLayout>