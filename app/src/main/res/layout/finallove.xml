<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="We wish you all the best, but don't forget this year Valentine's day will be the same night of PSG VS Barcelona..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textLove"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:fontFamily="serif"
        android:typeface="sans"
        android:textSize="20sp"
        android:textStyle="normal|bold|italic"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <ImageView
        android:layout_width="200dp"
        app:srcCompat="@drawable/heart"
        android:src="@drawable/heart"
        android:id="@+id/heart"
        android:layout_height="200dp"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/textLove"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="I will Always Love You"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonZ"
        android:layout_alignBaseline="@+id/exitLove"
        android:layout_alignBottom="@+id/exitLove"
        android:layout_toLeftOf="@+id/exitLove"
        android:layout_toStartOf="@+id/exitLove"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp" />

    <Button
        android:onClick="onClick"
        android:text="Exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/exitLove"
        android:layout_marginRight="44dp"
        android:layout_marginEnd="44dp"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/heart"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>