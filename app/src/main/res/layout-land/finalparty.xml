<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:onClick="onClick"
        android:text="Exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/exitParty"
        android:layout_marginRight="67dp"
        android:layout_marginEnd="67dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="TommorowLand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonZ"
        android:layout_marginRight="41dp"
        android:layout_marginEnd="41dp"
        android:layout_below="@+id/exitParty"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="37dp" />

    <TextView
        android:text="Let's the party start !"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textParty"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:fontFamily="serif"
        android:typeface="sans"
        android:textSize="36sp"
        android:textStyle="normal|bold|italic"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/buttonZ"
        android:layout_alignEnd="@+id/buttonZ"
        android:layout_marginTop="14dp" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:srcCompat="@drawable/party"
        android:src="@drawable/party"
        android:id="@+id/party"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textParty"
        android:layout_alignStart="@+id/textParty"
        android:layout_marginBottom="18dp" />

</RelativeLayout>